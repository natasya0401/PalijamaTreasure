<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/icon"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationX="-300dp"
            android:scaleX="0.5"
            android:scaleY="0.5" />
        <Constraint
            android:id="@+id/tv_splash"
            motion:layout_constraintEnd_toEndOf="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:scaleX="0"
            android:scaleY="0"
            motion:layout_constraintTop_toBottomOf="@id/icon"
            motion:layout_constraintStart_toStartOf="@id/icon" />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/middle">
        <Constraint
            android:id="@+id/icon"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="1"
            android:scaleY="1" />
        <Constraint
            android:id="@+id/tv_splash"
            motion:layout_constraintEnd_toEndOf="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:scaleX="0"
            android:scaleY="0"
            motion:layout_constraintTop_toBottomOf="@id/icon"
            motion:layout_constraintStart_toStartOf="@id/icon" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/icon"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="1"
            android:scaleY="1" />
        <Constraint
            android:id="@+id/tv_splash"
            motion:layout_constraintEnd_toEndOf="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:scaleX="1"
            android:scaleY="1"
            motion:layout_constraintTop_toBottomOf="@id/icon"
            motion:layout_constraintStart_toStartOf="@id/icon" />
    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/middle"
        motion:duration="3000"
        motion:autoTransition="animateToEnd"/>
    <Transition
        motion:constraintSetStart="@+id/middle"
        motion:constraintSetEnd="@+id/end"
        motion:duration="1000"
        motion:autoTransition="animateToEnd"/>
</MotionScene>